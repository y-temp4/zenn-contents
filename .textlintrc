{
  "filters": {
    "comments": true
  },
  "rules": {
    "preset-japanese": {
      "sentence-length": {
        "max": 150
      }
    },
    "preset-ja-spacing": {
      "ja-space-between-half-and-full-width": {
        "space": "always"
      },
      "ja-space-around-code": {
        "before": true,
        "after": true
      }
    },
    "ja-space-around-link": {
      "before": true,
      "after": true
    }
  }
}
